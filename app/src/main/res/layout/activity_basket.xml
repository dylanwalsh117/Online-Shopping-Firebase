<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasketActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_above="@id/totalPrice"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Price: "
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_above="@id/cont_btn"/>
    <Button
        android:id="@+id/cont_btn"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_above="@id/payment_btn"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Continue Shopping"/>

    <Button
        android:id="@+id/payment_btn"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/empty_btn"
        android:layout_centerInParent="true"
        android:layout_marginBottom="0dp"
        android:text="Go to Payment"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/empty_btn"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Empty Basket"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>